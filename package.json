{
  "name": "new-bastyon-chat",
  "private": true,
  "version": "0.1.0",
  "description": "Bastyon Decentralized Chat",
  "author": "Bastyon <dev@bastyon.com>",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite --host",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "electron:dev": "concurrently -k \"vite --host\" \"wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "electron:preview": "vite build && electron .",
    "electron:build": "vite build && electron-builder --config electron-builder.json",
    "electron:build:win": "vite build && electron-builder --config electron-builder.json --win",
    "electron:build:mac": "vite build && electron-builder --config electron-builder.json --mac",
    "electron:build:linux": "vite build && electron-builder --config electron-builder.json --linux"
  },
  "dependencies": {
    "@vee-validate/zod": "^4.13.2",
    "audio-recorder-polyfill": "^0.4.1",
    "axios": "^0.21.4",
    "bn.js": "^5.2.0",
    "buffer": "^6.0.3",
    "class-variance-authority": "^0.7.0",
    "create-hash": "^1.2.0",
    "file-saver": "^2.0.5",
    "matrix-js-sdk-bastyon": "23.2.2",
    "miscreant": "^0.3.2",
    "pbkdf2": "^3.1.2",
    "pinia": "^2.2.0",
    "qs": "^6.10.3",
    "stream-browserify": "^3.0.0",
    "vee-validate": "^4.13.2",
    "vue": "^3.4.31",
    "vue-router": "4",
    "vue-virtual-scroller": "^2.0.0-beta.8",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.14.12",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "electron-squirrel-startup": "^1.0.1",
    "happy-dom": "^20.6.2",
    "postcss": "^8.4.40",
    "tailwindcss": "^3.4.7",
    "typescript": "^5.5.4",
    "unplugin-auto-import": "^0.18.2",
    "unplugin-vue-components": "^0.27.3",
    "vite": "^5.3.4",
    "vitest": "^4.0.18",
    "vue-tsc": "^2.0.26",
    "wait-on": "^9.0.4"
  }
}
